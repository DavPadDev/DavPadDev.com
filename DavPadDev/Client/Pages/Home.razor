@page "/"

<div class="home-container">

    <!-- Hero / Banner -->
    <section class="hero fade-in delay-0">
        <h1>Welcome to my Portfolio</h1>
        <p>Building modern web solutions with .NET and Blazor.</p>
    </section>

    <!-- About Blurb -->
    <section class="about-preview fade-in delay-1">
        <h2>About Me</h2>
        <p>
            I'm a passionate developer with experience in building web apps,
            cloud solutions, and creative projects.
            <a href="/about">Read more →</a>
        </p>
    </section>

    <!-- Projects Preview -->
    <section class="projects-preview fade-in delay-2">
        <h2>Highlighted Projects</h2>
        <div class="projects-grid">
            <div class="project-card">
                <img src="images/githubscreenshot.png" alt="DavPadDev Portfolio Screenshot" class="project-image" />
